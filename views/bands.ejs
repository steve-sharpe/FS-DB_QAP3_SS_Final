<html lang="en">
	<body>
		<div class="main-container">
			<!-- Include head partial -->
			<%- include('./partials/head.ejs') %>
			<!-- Include navigation partial -->
			<%- include('./partials/nav.ejs') %>
			<div class="content">
				<!-- Page title -->
				<h1>BANDS</h1>
				<!-- Bands table -->
				<table>
					<thead>
						<tr>
							<th>Band ID</th>
							<th>Band Name</th>
							<th>Singer</th>
							<th>Label</th>
							<th>Number of Albums</th>
							<th>Favourite Album</th>
							<th>Edit</th>
							<!-- Added header for Edit -->
							<th>Delete</th>
							<!-- Added header for Delete -->
						</tr>
					</thead>
					<tbody>
						<!-- Loop through bands and display each band in a row -->
						<% if (bands.length > 0) { bands.forEach(band => { %>
						<tr>
							<td><%= band.band_id %></td>
							<td><%= band.band_name %></td>
							<td><%= band.band_singer %></td>
							<td><%= band.band_label %></td>
							<td><%= band.number_albums %></td>
							<td><%= band.favourite_album %></td>
							<!-- Edit Button -->
							<td>
								<form action="/bands/edit/<%= band.band_id %>" method="GET">
									<button type="submit">Edit</button>
								</form>
							</td>
							<!-- Delete Button -->
							<td>
								<form
									action="/bands/<%= band.band_id %>?_method=DELETE"
									method="POST"
								>
									<button type="submit">Delete</button>
								</form>
							</td>
						</tr>
						<% }) } %>
					</tbody>
				</table>
				<!-- Include foot partial -->
				<%- include('./partials/foot.ejs') %>
			</div>
		</div>
	</body>
</html>
