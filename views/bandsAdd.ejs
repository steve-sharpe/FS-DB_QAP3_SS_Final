<!DOCTYPE html>
<html lang="en">
	<body>
		<div class="main-container">
			<!-- Include head and navigation partials -->
			<%- include('./partials/head.ejs') %> <%- include('./partials/nav.ejs') %>
			<!-- Page title -->
			<h1>ADD BAND</h1>
			<div class="content">
				<!-- Band addition form -->
				<form action="/band/" method="POST">
					<div class="form-group">
						<!-- Band name input -->
						<label for="band_name">Band Name</label>
						<input
							type="text"
							class="form-control"
							id="band_name"
							name="band_name"
							placeholder="Enter band name"
						/>
						<!-- Singer name input -->
						<label for="band_singer">Singer Name</label>
						<input
							type="text"
							class="form-control"
							id="band_singer"
							name="band_singer"
							placeholder="Enter singer name"
						/>
						<!-- Label name input -->
						<label for="band_label">Label Name</label>
						<input
							type="text"
							class="form-control"
							id="band_label"
							name="band_label"
							placeholder="Enter label name"
						/>
						<!-- Number of albums input -->
						<label for="number_albums">Number of Albums</label>
						<input
							type="number"
							class="form-control"
							id="number_albums"
							name="number_albums"
							placeholder="Enter number of albums"
						/>
						<!-- Favourite album input -->
						<label for="favourite_album">Favourite Album</label>
						<input
							type="text"
							class="form-control"
							id="favourite_album"
							name="favourite_album"
							placeholder="Enter favourite album"
						/>
						<!-- Submit button -->
						<button type="submit" class="btn btn-primary">Submit</button>
					</div>
				</form>
				<!-- Include foot partial -->
				<%- include('./partials/foot.ejs') %>
			</div>
		</div>
	</body>
</html>
