<html lang="en">
	<%- include('./partials/head.ejs') %>
	<body>
		<%- include('./partials/nav.ejs') %>
		<div class="bands content">
			<table>
				<thead>
					<tr>
						<th>Band ID</th>
						<th>Band Name</th>
						<th>Singer</th>
						<th>Label</th>
						<th>Number of Albums</th>
						<th>Favourite Album</th>
						<th>Edit</th>
						<!-- Added header for Edit -->
						<th>Delete</th>
						<!-- Added header for Delete -->
					</tr>
				</thead>
				<tbody>
					<% if (bands.length > 0) { bands.forEach(band => { %>
					<tr>
						<td><%= band.band_id %></td>
						<td><%= band.band_name %></td>
						<td><%= band.band_singer %></td>
						<td><%= band.band_label %></td>
						<td><%= band.number_albums %></td>
						<td><%= band.favourite_album %></td>
						<!-- Edit Button -->
						<td>
							<a href="/bands/<%= band.band_id %>" class="btn btn-primary"
								>Edit</a
							>
						</td>
						<!-- Delete Button -->
						<td>
							<form
								action="/bands/<%= band.band_id %>?_method=DELETE"
								method="POST"
							>
								<button type="submit">Delete</button>
							</form>
						</td>
					</tr>
					<% }) } %>
				</tbody>
			</table>
		</div>
	</body>
	<%- include('./partials/foot.ejs') %>
</html>
